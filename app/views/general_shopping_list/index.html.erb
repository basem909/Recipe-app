<h2> General shopping list</h2>
<%=link_to 'Back', user_inventories_path(current_user) %>
<div class="inventory-detials">
<div class ="inventory-header">
   <div class="general-calc">
     <p class="in-title">Ammount of food to buy :<%= @missing_foods.length%></p>
     <p class="in-title">Total value of food needed:$ <%=@total_price  %></p>
   </div>
   <div class="general-links">
     <p  class ="in-btn">Recipe :<%= link_to @recipe_food.recipe.name, user_recipe_path(current_user,@recipe_food) if @recipe_food %></p>
     <p  class ="in-btn"> inventory :<%= link_to @inventory_food.inventory.name, user_inventory_path(current_user,@inventory_food) if @inventory_food %></p>
   </div>
</div>
   <div class ="food-basket">
      <table class="table-list">
       <tr>
         <th>Food</th>
         <th>Quantity</th>
         <th>Price</th>
       </tr>
       <% @missing_foods.each do |item| %>
       <tr>
         <td><%= item.name %></td>
         <td><%=  @quantity %> grams</td>
         <td>$<%= @price %></td>
       </tr>
       <% end %>
      </table>
   </div>
</div>