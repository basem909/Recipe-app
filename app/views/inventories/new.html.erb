<h2>Create Inventory</h2>
<div class="inventory-form">
<%= form_with model: inventory, url: user_inventories_path , method: :post, local: true, scope: :inventory do |f|%>
  <div>
     <%= f.label :name, class: "name-label" %>
     <%= f.text_field :name, placeholder: "Your inventory's name here..." %>
  <div>
  <div>
     <%= f.text_area :description, placeholder: "Your inventory description here.." %>
  </div>

  <div>
    <%= f.submit class: "btn"%>
  </div>
<%end%>
</div>