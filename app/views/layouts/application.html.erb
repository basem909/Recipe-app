<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

  <div class="notifications">
   <% flash.each do |key, message| %>
     <p><%= message %></p>
   <% end %>
   </div>
   <div class ="page-links">
   <% if user_signed_in? %>
     <%= link_to "Hi,#{current_user.email}", edit_user_registration_path %>
     <%= link_to "Public Recipes ", public_recipes_path(current_user)%>
     <%= link_to "All Food", user_foods_path(current_user)%>
     <%= link_to "All Recipes",user_recipes_path(current_user)%>
     <%= link_to "All Inventory",user_inventories_path(current_user)%>
     <%= link_to "Shopping list",shopping_list_index_path %>
     <%= link_to "General Shopping list",general_shopping_list_index_path %>

     <%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: {confirm: "You are about to sign out?"},class: "sign-out-btn"%>
     <% else %>
     <%= link_to 'Sign in', new_user_session_path %>
     <%= link_to 'Sign up', new_user_registration_path %>
   <%end%>
   </div>
    <%= yield %>
  </body>
</html>
